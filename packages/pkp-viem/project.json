{
  "name": "pkp-viem",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/pkp-viem/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn build:target pkp-viem"
      }
    },
    "_buildTsc": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/pkp-viem",
        "main": "packages/pkp-viem/src/index.ts",
        "tsConfig": "packages/pkp-viem/tsconfig.lib.json",
        "assets": ["packages/pkp-viem/*.md"],
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "_buildWeb": {
      "executor": "@websaam/nx-esbuild:package",
      "options": {
        "globalName": "LitJsSdk_pkpViem",
        "outfile": "dist/packages/pkp-viem-vanilla/pkp-viem.js",
        "entryPoints": ["./packages/pkp-viem/src/index.ts"],
        "define": {
          "process.env.NODE_DEBUG": "false",
          "global": "window"
        },
        "plugins": [
          {
            "package": "esbuild-node-builtins",
            "function": "nodeBuiltIns"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/pkp-viem/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/pkp-viem"],
      "options": {
        "jestConfig": "packages/pkp-viem/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
