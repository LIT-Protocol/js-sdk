{
  "name": "pkp-base",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/pkp-base/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn build:target pkp-base"
      }
    },
    "_buildTsc": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/pkp-base",
        "main": "packages/pkp-base/src/index.ts",
        "tsConfig": "packages/pkp-base/tsconfig.lib.json",
        "assets": [
          "packages/pkp-base/*.md"
        ]
      }
    },
    "_buildWeb": {
      "executor": "@websaam/nx-esbuild:package",
      "options": {
        "globalName": "LitJsSdk_pkpBase",
        "outfile": "dist/packages/pkp-base-vanilla/pkp-base.js",
        "entryPoints": [
          "./packages/pkp-base/src/index.ts"
        ],
        "define": {
          "process.env.NODE_DEBUG": "false",
          "global": "window"
        },
        "plugins": [
          {
            "package": "esbuild-node-builtins",
            "function": "nodeBuiltIns"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/pkp-base/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/packages/pkp-base"
      ],
      "options": {
        "jestConfig": "packages/pkp-base/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}